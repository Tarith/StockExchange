<div id="confirmDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirm Delete</h4>
            </div>

            @using (Ajax.BeginForm("DeleteStock", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "HandleModelResponse" }, new { id = "DeleteStockModal" }))
            {
                <div class="modal-body">
                    <label class="errorMessage text-danger"></label>

                    <p>Are you sure you want to delete this item?</p>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-sm btn-default btn-flat" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-sm btn-danger btn-flat" id="DeleteConfirmed">Delete</button>
                </div>
            }

        </div>
    </div>
</div>
